<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatheApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/Blue01</item>
        <item name="colorPrimaryDark">@color/Blue01</item>
        <item name="colorAccent">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatheApp" parent="Base.Theme.WeatheApp" />

<!--    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">-->
<!--        <item name="dialogCornerRadius">28dp</item>-->
<!--    </style>-->

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="CustomDialog">
        <item name="android:background">@drawable/curve_shape</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="dialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:height">42dp</item>
        <item name="android:textColor">@color/Sunrise</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>

        <item name="android:minHeight">2dp</item>
        <item name="android:minWidth">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@null</item>
        <item name="backgroundTint">@color/white</item>
        <item name="backgroundTintMode">add</item>
    </style>

</resources>